<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee" >
    <RelativeLayout
        android:id="@+id/category_topbar"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_background" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/all_categories" 
            android:textSize="@dimen/topbar_text"
            android:textColor="@color/topbar_text_color"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/category1"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_below="@id/category_topbar"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/shape_bg">
        <LinearLayout 
            android:id="@+id/catergory_digital"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/comm_shakebg_selected"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
	        <ImageView
		        
		        android:layout_width="60dip"
		        android:layout_height="50dip"
		        android:layout_marginTop="1.5dip"
		        android:layout_marginLeft="10dp"
		        android:src="@drawable/catergory_digtcamer" />
		        <LinearLayout
			        android:id="@+id/relativeLayout"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="3dp"
			        android:layout_marginLeft="5dp"
			        android:orientation="vertical">
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="数码产品"
			            android:textColor="@color/black"
			            android:textSize="18sp" />
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="4dip"
				        android:text="手机/手机配件/电脑/外设/其他"
				        android:textSize="12sp" 
				        android:textColor="#999999" />
			    </LinearLayout>      
    	</LinearLayout>
    </LinearLayout>
        
    <LinearLayout
        android:id="@+id/category2"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_below="@id/category1"
        android:clickable="true"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" 
        android:background="@drawable/shape_bg">

        <LinearLayout 
            android:id="@+id/catergory_skincare"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/comm_shakebg_selected"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
	        <ImageView
		        
		        android:layout_width="60dip"
		        android:layout_height="50dip"
		        android:layout_marginTop="1.5dip"
		        android:layout_marginLeft="10dp"
		        android:src="@drawable/catergory_skincare" />
		        <LinearLayout
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="3dp"
			        android:layout_marginLeft="5dp"
			        android:orientation="vertical">
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="美容保健"
			            android:textColor="@color/black"
			            android:textSize="18sp" />
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="4dip"
				        android:text="护肤/香水/美甲/其他"
				        android:textSize="12sp" 
				        android:textColor="#999999" />
			    </LinearLayout>      
    	</LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/category3"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_below="@id/category2"
        android:clickable="true"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" 
        android:background="@drawable/shape_bg">

        <LinearLayout 
            android:id="@+id/catergory_book"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/comm_shakebg_selected"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
	        <ImageView
		        
		        android:layout_width="60dip"
		        android:layout_height="50dip"
		        android:layout_marginTop="1.5dip"
		        android:layout_marginLeft="10dp"
		        android:src="@drawable/catergory_book" />
		        <LinearLayout
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="3dp"
			        android:layout_marginLeft="5dp"
			        android:orientation="vertical">
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="图书音像"
			            android:textColor="@color/black"
			            android:textSize="18sp" />
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="4dip"
				        android:text="书籍/CD/海报/其他"
				        android:textSize="12sp" 
				        android:textColor="#999999" />
			    </LinearLayout>      
    	</LinearLayout>
   	</LinearLayout>
    <LinearLayout
        android:id="@+id/category4"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_below="@id/category3"
        android:clickable="true"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" 
        android:background="@drawable/shape_bg">

        <LinearLayout 
            android:id="@+id/catergory_cloth"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/comm_shakebg_selected"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
	        <ImageView
		        
		        android:layout_width="60dip"
		        android:layout_height="50dip"
		        android:layout_marginTop="1.5dip"
		        android:layout_marginLeft="10dp"
		        android:src="@drawable/catergory_cloth" />
		        <LinearLayout
			        android:clickable="true"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="3dp"
			        android:layout_marginLeft="5dp"
			        android:orientation="vertical">
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="服装箱包"
			            android:textColor="@color/black"
			            android:textSize="18sp" />
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="4dip"
				        android:text="鞋帽/包/其他"
				        android:textSize="12sp" 
				        android:textColor="#999999" />
			    </LinearLayout>      
    		</LinearLayout>
    	</LinearLayout>
    <LinearLayout
        android:id="@+id/category5"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_below="@id/category4"
        android:clickable="true"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" 
        android:background="@drawable/shape_bg">

        <LinearLayout 
            android:id="@+id/catergory_furniture"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/comm_shakebg_selected"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
	        <ImageView
		        
		        android:layout_width="60dip"
		        android:layout_height="50dip"
		        android:layout_marginTop="1.5dip"
		        android:layout_marginLeft="10dp"
		        android:src="@drawable/catergory_furnitrue" />
		        <LinearLayout
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="3dp"
			        android:layout_marginLeft="5dp"
			        android:orientation="vertical">
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="家居代步"
			            android:textColor="@color/black"
			            android:textSize="18sp" />
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="4dip"
				        android:text="桌椅/代步工具/家居耗材/其他"
				        android:textSize="12sp" 
				        android:textColor="#999999" />
			    </LinearLayout>      
    		</LinearLayout>
    	</LinearLayout>
    <LinearLayout
        android:id="@+id/category6"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_below="@id/category5"
        android:clickable="true"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" 
        android:background="@drawable/shape_bg">

        <LinearLayout 
            android:id="@+id/catergory_eat"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/comm_shakebg_selected"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
	        <ImageView
		        
		        android:layout_width="60dip"
		        android:layout_height="50dip"
		        android:layout_marginTop="1.5dip"
		        android:layout_marginLeft="10dp"
		        android:src="@drawable/catergory_eat" />
		        <LinearLayout
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="3dp"
			        android:layout_marginLeft="5dp"
			        android:orientation="vertical">
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="饮食娱乐"
			            android:textColor="@color/black"
			            android:textSize="18sp" />
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="4dip"
				        android:text="饮食/门票/优惠卡/其他"
				        android:textSize="12sp" 
				        android:textColor="#999999" />
			    </LinearLayout>    
	    </LinearLayout>  
    </LinearLayout>
</RelativeLayout>